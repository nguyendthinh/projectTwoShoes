<!DOCTYPE html>
<html>
  <head>
    <title>Shoe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <div id="container">
    <header>

    <nav id="usernav">
      <h1><%= link_to "DECADE FOOTWEAR", brands_path %></h1>
      <% if @current_user %>

        <% if @current_user.admin? %>
        <p class="usersign"><%= link_to "Welcome, Admin!", user_path(@current_user) %>&nbsp;&nbsp;

        <% else %>
        <p class="usersign"><%= link_to "Welcome, #{@current_user.name}!", user_path(@current_user) %>&nbsp;&nbsp;
      <% end %>

      <%= link_to "Cart", orders_path %>&nbsp;&nbsp;
      <%= link_to "Sign Out", session_path, method: :delete %></p>
  <% else %>
      <p class="usersign">
      Welcome, Guest!&nbsp;&nbsp;
      <%= link_to "Cart", orders_path %>&nbsp;&nbsp;
      <%= link_to "Sign Up", new_user_path %>&nbsp;&nbsp;
      <%= link_to "Sign In", new_session_path %></p>
  <% end %>
    </nav>

    <nav id="brandnav">
      <% @brands.each do |brand| %>
      <%= link_to brand.name, brand %> &nbsp;
      <% end %>
    </nav>

  </header>
  <section>
    <%= yield %>
    <% flash.each do |type, message| %>
  <p class="<%= type %>"><%= message %></p>
<% end %>
  </section>
</div>
  </body>
</html>
